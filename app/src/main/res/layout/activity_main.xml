<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:useDefaultMargins="true"
    tools:context="MainActivity">


    <TextView
        android:id="@+id/gasolinaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="start"


        android:gravity="start"
        android:text="@string/gas_text"
        android:textColor="@color/text_color_textView" />

    <TextView
        android:id="@+id/priceGasTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"

        android:layout_gravity="end"
        android:gravity="end"
        android:textColor="@color/text_color_textView" />

    <SeekBar
        android:id="@+id/gasolinaSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:max="1000"
        android:progress="500" />

    <TextView
        android:id="@+id/etanolLabelTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"

        android:layout_gravity="start"
        android:gravity="start"
        android:text="@string/etanol_text"
        android:textColor="@color/text_color_textView" />

    <TextView
        android:id="@+id/priceEtanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"

        android:layout_gravity="end"
        android:gravity="end"
        android:textColor="@color/text_color_textView" />

    <SeekBar
        android:id="@+id/etanolSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/seekbar_height"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:max="1000"
        android:progress="500" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:hint="@string/tip"
        android:textColorHint="@color/text_color_textView"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/resultTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_textView"
            android:clickable="false"
            android:cursorVisible="false"

            android:focusableInTouchMode="false"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/fuel_imageVIew"
        android:layout_width="@dimen/width_imageView"
        android:layout_height="@dimen/height_imageView"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="center"
        android:src="@drawable/gasolina" />


</GridLayout>